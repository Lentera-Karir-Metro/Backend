    "name": "LenteraKarir API (Lengkap & Terupdate)",
    "description": "Koleksi API Lengkap untuk Backend LenteraKarir. Mencakup seluruh endpoint Admin, User, Public, dan System. Tidak ada dependensi Google/Supabase.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-Switch Token Logic",
          "let token = pm.collectionVariables.get('user_token');",
          "// Jika URL mengandung 'admin', gunakan admin_token",
          "if (pm.request.url.path.join('/').includes('admin')) {",
          "    token = pm.collectionVariables.get('admin_token');",
          "}",
          "// Fallback ke auth_token umum jika spesifik token kosong",
          "if (!token) token = pm.collectionVariables.get('auth_token');",
          "if (token) {",
          "    pm.request.headers.add({key: 'Authorization', value: 'Bearer ' + token});",
          "}"
        ]
      }
    }
  ],
